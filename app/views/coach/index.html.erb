<div class="tutor">
  <%= render "shared/learning_nav" %>

  <header class="tutor-header">
    <p class="tutor-kicker">Step 2</p>
    <h1>Hand Coach</h1>
    <p class="tutor-subtitle">Build a winning hand step-by-step and learn why each choice works.</p>
  </header>

  <section class="tutor-card" data-controller="coach">
    <div class="coach-header">
      <h2 class="coach-title" data-coach-target="title">Hand Coach</h2>
      <p class="coach-text" data-coach-target="explain"></p>
    </div>

    <div class="coach-hand" data-coach-target="hand"></div>

    <h3 class="coach-prompt">Which tile should you discard?</h3>
    <div class="tutor-options coach-choices" data-coach-target="choices"></div>

    <p class="tutor-feedback" data-coach-target="feedback"></p>
    <p class="coach-tip" data-coach-target="tip"></p>

    <div class="tutor-actions">
      <button class="tutor-next" type="button" data-coach-target="next" data-action="coach#nextScenario">Next hand</button>
    </div>
  </section>
</div>
