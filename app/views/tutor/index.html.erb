<div class="tutor" data-controller="tutor">
  <%= render "shared/learning_nav" %>

  <header class="tutor-header">
    <p class="tutor-kicker">Mahjong Tutor</p>
    <h1>Tile Recognition</h1>
    <p class="tutor-subtitle">Identify the tile by name. Start with the basics: suits, winds, and dragons.</p>
  </header>

  <section class="tutor-card">
    <div class="tutor-tile" data-tutor-target="tile">
      <img class="tutor-tile-image" data-tutor-target="tileImage" alt="" />
      <span class="tutor-tile-glyph" data-tutor-target="tileGlyph">Loading...</span>
    </div>
    <p class="tutor-explain" data-tutor-target="explain"></p>
    <div class="tutor-details">
      <button class="tutor-details__toggle" type="button" data-action="tutor#toggleDetails" data-tutor-target="detailsToggle">
        Why itâ€™s called that
      </button>
      <ul class="tutor-details__list" data-tutor-target="detailsList"></ul>
    </div>
    <div class="tutor-options" data-tutor-target="options"></div>
    <p class="tutor-feedback" data-tutor-target="feedback"></p>
    <div class="tutor-actions">
      <button class="tutor-next" type="button" data-tutor-target="next" data-action="tutor#next">Next tile</button>
    </div>
  </section>

  <section class="tutor-stats">
    <div class="tutor-stat">
      <span class="tutor-stat-label">Score</span>
      <span class="tutor-stat-value" data-tutor-target="score">0</span>
    </div>
    <div class="tutor-stat">
      <span class="tutor-stat-label">Streak</span>
      <span class="tutor-stat-value" data-tutor-target="streak">0</span>
    </div>
  </section>
</div>
